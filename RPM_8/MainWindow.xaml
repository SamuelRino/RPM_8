<Window x:Class="RPM_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPM_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="lbox_Output" Grid.ColumnSpan="2"/>

        <GroupBox Grid.Row="1" Header="Работа с успеваемостью">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Дисциплина"/>
                <TextBox x:Name="tb_Discipline" Grid.Row="1" Margin="3" VerticalContentAlignment="Center"/>

                <Label Content="Оценка" Grid.Column="1"/>
                <TextBox x:Name="tb_Mark" Grid.Row="1" Grid.Column="1" Margin="3" VerticalContentAlignment="Center"/>

                <Grid Grid.ColumnSpan="2" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="btn_Change" Margin="5" Content="Изменить" Click="btn_Change_Click"/>
                    <Button x:Name="btn_Remove" Grid.Column="1" Margin="5" Content="Удалить"/>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Средняя успеваемость">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Средний балл"/>
                <TextBlock x:Name="tb_rezult" Grid.Row="1" Margin="3" VerticalAlignment="Center"/>

                <Button x:Name="btn_Calculate" Grid.Row="2" Margin="5" Content="Рассчитать"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
